<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.EditProfilePageController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="447.0" layoutY="31.0" maxHeight="-Infinity" maxWidth="-Infinity"
              prefHeight="286.0" prefWidth="300.0" spacing="15.0" AnchorPane.rightAnchor="50.0"
              AnchorPane.topAnchor="50.0">
            <children>
                <Label text="Add check-in to Profile">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField fx:id="destinationField" promptText="Search Destination"/>
                <Button mnemonicParsing="false" onAction="#addSelectedDestinationToListView" text="Select"/>
                <ListView fx:id="selectedDestinations" prefHeight="105.0" prefWidth="264.0"/>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                    <children>
                        <Button fx:id="addDestinationsButton" mnemonicParsing="false" text="Add to Profile"/>
                        <Button mnemonicParsing="false" text="Remove"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <VBox alignment="TOP_CENTER" layoutX="37.0" layoutY="51.0" maxHeight="-Infinity" maxWidth="-Infinity"
              prefHeight="450.0" prefWidth="300.0" spacing="25.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.topAnchor="50.0">
            <children>
                <Label text="Edit profile details">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <HBox spacing="15.0">
                    <children>
                        <Label prefWidth="75.0" text="First Name"/>
                        <TextField fx:id="firstNameField"/>
                    </children>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label prefWidth="75.0" text="Last Name"/>
                        <TextField fx:id="lastNameField"/>
                    </children>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label prefWidth="75.0" text="Gender"/>
                        <ChoiceBox prefWidth="150.0"/>
                    </children>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label prefWidth="75.0" text="Age"/>
                        <TextField fx:id="ageField"/>
                    </children>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label prefWidth="75.0" text="Username"/>
                        <TextField fx:id="usernameField"/>
                    </children>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label prefWidth="75.0" text="Password"/>
                        <PasswordField fx:id="passwordField"/>
                    </children>
                </HBox>
                <Button fx:id="saveDetailsButton" mnemonicParsing="false" text="Save Details"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <Button fx:id="closeButton" layoutX="734.0" layoutY="561.0" mnemonicParsing="false" onAction="#closeEditProfile"
                text="Close"/>
    </children>
</AnchorPane>
