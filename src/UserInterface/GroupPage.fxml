            </Button>
             <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #707070;"
                     text="Empty" textFill="WHITE">
               <font>
                   <Font name="System Bold" size="18.0"/>
               </font>
            </Button>
             <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #707070;"
                     text="Empty" textFill="WHITE">
               <font>
                   <Font name="System Bold" size="18.0"/>
               </font>
            </Button>
             <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #707070;"
                     text="Empty" textFill="WHITE">
               <font>
                   <Font name="System Bold" size="18.0"/>
               </font>
            </Button>
         </children>
         <padding>
             <Insets top="50.0"/>
         </padding>
      </VBox>
       <VBox alignment="CENTER_LEFT" layoutX="435.0" layoutY="50.0" prefHeight="643.0" prefWidth="690.0" spacing="20.0"
             style="-fx-background-color: orange;">
           <children>
               <Label text="Create New Travel Group">
                   <font>
                       <Font name="System Bold" size="30.0"/>
                   </font>
               </Label>
               <TextField fx:id="writeGroupNameField" prefHeight="40.0" prefWidth="100.0" promptText="Group Name">
                   <font>
                       <Font size="16.0"/>
                   </font>
               </TextField>
               <Label text="Add User to Group">
                   <font>
                       <Font size="18.0"/>
                   </font>
               </Label>
               <TextField fx:id="searchForUserField" prefHeight="40.0" prefWidth="300.0"
                          promptText="Search for Username">
                   <font>
                       <Font size="16.0"/>
                   </font>
               </TextField>
               <HBox spacing="20.0">
                   <children>
                       <Button mnemonicParsing="false" onAction="#addSelectedUserToListView"
                               style="-fx-background-color: green;" text="Add Selected User" textFill="WHITE">
                           <font>
                               <Font name="System Bold" size="15.0"/>
                           </font>
                       </Button>
                       <Button mnemonicParsing="false" style="-fx-background-color: grey;" text="Remove"
                               textFill="WHITE">
                           <font>
                               <Font name="System Bold" size="15.0"/>
                           </font>
                       </Button>
                   </children>
               </HBox>
               <ListView fx:id="addedUsersList" prefHeight="200.0" prefWidth="300.0"/>
               <Button fx:id="createGroupButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" mnemonicParsing="false" onAction="#createNewGroupFromUserInput"
                       prefHeight="40.0" style="-fx-background-color: Green;" text="Create Group" textFill="WHITE">
                   <font>
                       <Font name="System Bold" size="18.0"/>
                   </font>
               </Button>
           </children>
           <padding>
               <Insets left="150.0" right="150.0"/>
           </padding>
       </VBox>
       <Label layoutX="435.0" layoutY="720.0"
